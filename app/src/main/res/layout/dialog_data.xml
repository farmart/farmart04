<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5fb0c9">
        <ImageButton
            android:id="@+id/user_edit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profile_image_background2"
            android:elevation="4dp"
            android:src="@mipmap/ic_mode_edit_black_48dp" />

        <ImageButton
            android:layout_below="@id/user_edit"
            android:id="@+id/user_hapus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profile_image_background2"
            android:elevation="4dp"
            android:src="@mipmap/ic_delete_forever_black_48dp" />
    </RelativeLayout>


</LinearLayout>



